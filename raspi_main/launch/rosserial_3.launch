<launch>

    <node name="serial_node_1" pkg="rosserial_python" type="serial_node.py" output="screen" respawn="true" respawn_delay="2">
        <param name="port" type="string" value="/dev/ttyACM0"/>
        <param name="baud" type="int" value="57600"/>
    </node>

    <node name="serial_node_2" pkg="rosserial_python" type="serial_node.py" output="screen" respawn="true" respawn_delay="2">
        <param name="port" type="string" value="/dev/ttyACM1"/>
        <param name="baud" type="int" value="57600"/>
    </node>

    <node name="serial_node_3" pkg="rosserial_python" type="serial_node.py" output="screen" respawn="true" respawn_delay="2">
        <param name="port" type="string" value="/dev/ttyACM1"/>
        <param name="baud" type="int" value="57600"/>
    </node>

</launch>